{
    "name": "qarecorder",
    "productName": "QA Recorder",
    "version": "1.0.1",
    "description": "A ReactJS application to assist with the recording and review of quality-assurance tester gameplay.",
    "license": "MIT",
    "author": {
        "name": "Dustin Yost",
        "email": "dustin.yost.t@gmail.com",
        "url": "https://github.com/temportalflux"
    },
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "build": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/temportalflux/QA-Recorder"
    },
    "bugs": {
        "url": "https://github.com/temportalflux/QA-Recorder/issues"
    },
    "keywords": [],
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "npm"
            },
            "electronWinstallerConfig": {
                "name": "qa_recorder"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "temportalflux",
                "name": "QA-Recorder"
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "qarecorder"
            }
        }
    },
    "dependencies": {
        "electron-compile": "^6.4.3",
        "electron-devtools-installer": "^2.2.4",
        "electron-squirrel-startup": "^1.0.0",
        "install": "^0.12.1",
        "lodash": "^4.17.10",
        "obs-websocket-js": "^1.2.0",
        "prop-types": "^15.6.2",
        "react": "^15.6.2",
        "react-dom": "^15.6.2",
        "react-hot-loader": "^3.1.3",
        "react-icons": "^3.0.4",
        "react-numeric-input": "^2.2.3",
        "semantic-ui-react": "^0.79.1",
        "shortid": "^2.2.12",
        "video-react": "^0.13.0"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-es2015-classes": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "electron-builder": "^20.26.1",
        "electron-forge": "^5.2.2",
        "electron-prebuilt-compile": "2.0.4",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-jsx-a11y": "^5.1.1",
        "eslint-plugin-react": "^7.10.0"
    },
    "build": {
        "appId": "com.temportalflux.qarecorder",
        "files": [
            "package.json",
            "dist/",
            "node_modules/",
            "src/"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        }
    }
}
